@model PagedList.IPagedList<Data.Document>

<div class="widget-content section" id="sidebar-wrapper">
    <ul class="post-widget">
        @foreach (var item in Model)
            {
            <li>
                <a class="rcp-thumb" href="/Home/Details/@item.DocumentID" style="background:url(data:image/gif;base64,@Convert.ToBase64String(item.Thumbnail)) no-repeat center center;background-size: cover"></a>
                <div class="post-panel">
                    <h3 class="rcp-title"><a href="/Home/Details/@item.DocumentID">@item.DocumentName</a></h3>
                    <span class="recent-date">@item.DatePost</span><span class="recent-author">@item.Account.Username</span>
                </div>
                <div class="clearfix"></div>
            </li>

        }
    </ul><div class="clear"></div>
